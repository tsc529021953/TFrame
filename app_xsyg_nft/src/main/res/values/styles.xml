<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="in_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/in_title_margin</item>
        <item name="android:layout_marginStart">@dimen/in_title_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="in_content_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/in_content_margin</item>
        <item name="android:layout_marginStart">100dp</item>
        <item name="android:layout_marginEnd">100dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="right_menu_style">
        <item name="android:layout_width">@dimen/right_menu_item_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginEnd">@dimen/in_title_margin</item>
        <item name="android:layout_marginTop">@dimen/in_title_margin</item>
    </style>

    <style name="right_menu_item_style">
        <item name="android:layout_width">@dimen/right_menu_item_size</item>
        <item name="android:layout_height">@dimen/right_menu_item_size</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:tint">@drawable/right_menu_item_selector</item>
    </style>
</resources>