<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="main_app_item_style">
        <item name="android:layout_width">@dimen/main_app_item_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="main_app_item_img_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_app_item_width</item>
        <item name="android:background">@drawable/shape_main_app_item_bg</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="main_app_item_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_app_text_height</item>
        <item name="android:textSize">@dimen/main_app_item_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="main_app_hor_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="main_app_ver_style">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="main_app_interval_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">50dp</item>
    </style>

    <style name="main_switch_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">15dp</item>
<!--        <item name="android:layout_marginTop">10dp</item>-->
        <item name="android:thumb">@drawable/setting_switch_thumb_setting</item>
    </style>

    <style name="one_board_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginTop">76dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="one_flower_style">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
<!--        <item name="android:scaleType">fitXY</item>-->
    </style>
    <style name="one_by_logo_style">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
<!--        <item name="android:scaleType">fitXY</item>-->
    </style>

    <style name="one_by_dragon_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:alpha">0.3</item>
        <!--        <item name="android:scaleType">fitXY</item>-->
    </style>

    <style name="one_vp_item_style">
        <item name="android:layout_width">@dimen/one_item_ctrl_vp_item_width</item>
        <item name="android:layout_height">@dimen/one_item_ctrl_vp_item_height</item>
    </style>

    <style name="one_vp_item_img_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:backgroundTint">#BE292D</item>
        <item name="android:background">@drawable/shape_common_corner_8dp</item>
    </style>

    <style name="one_item_btn_style">
        <item name="android:layout_width">@dimen/one_item_ctrl_vp_btn_width</item>
        <item name="android:layout_height">@dimen/one_item_ctrl_vp_btn_height</item>
        <item name="android:background">@drawable/shape_one_btn_item</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/one_btn_item_text_color</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

</resources>
