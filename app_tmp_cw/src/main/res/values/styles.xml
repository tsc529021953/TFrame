<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:app="http://schemas.android.com/apk/res-auto"
        >


    <style name="main_title_clock">
        <item name="android:textSize">@dimen/main_title_clock_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:format24Hour">@string/format_12_hour</item>
        <item name="android:format12Hour">@string/format_12_hour</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/main_title_clock_margin_end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="main_title_station">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/main_title_clock_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="main_title_station_ly">
        <item name="android:layout_width">@dimen/main_title_station_ly_width</item>
        <item name="android:layout_height">@dimen/main_title_station_ly_height</item>
        <item name="android:background">@drawable/shape_title_station_bg</item>
        <item name="android:paddingEnd">@dimen/main_title_station_margin</item>
        <item name="android:paddingStart">@dimen/main_title_station_margin</item>
    </style>

    <style name="main_notify_station">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_title_station_ly_height</item>
        <item name="android:textSize">@dimen/main_title_clock_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="main_bottom_right_ly">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="main_bottom_right_bottom_btn_ly">
        <item name="android:layout_width">@dimen/bottom_btn_list_size</item>
        <item name="android:layout_height">@dimen/bottom_btn_list_size</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_marginEnd">@dimen/bottom_btn_list_margin</item>
        <item name="android:layout_marginBottom">@dimen/bottom_btn_list_margin</item>
        <!--        <item name="android:layout_marginStart">@dimen/bottom_btn_list_margin</item>-->
    </style>

    <style name="main_bottom_left_bottom_btn_ly">
        <item name="android:layout_width">@dimen/bottom_btn_list_size</item>
        <item name="android:layout_height">@dimen/bottom_btn_list_size</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_marginBottom">@dimen/bottom_btn_list_margin</item>
        <item name="android:layout_marginStart">@dimen/bottom_btn_list_margin</item>
    </style>

    <style name="main_bottom_right_bottom_btn_ly2">
        <item name="android:layout_width">@dimen/bottom_btn_list_size</item>
        <item name="android:layout_height">@dimen/bottom_btn_list_size</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_marginEnd">@dimen/bottom_btn_list_margin</item>
        <item name="android:layout_marginBottom">@dimen/bottom_btn_list_margin</item>
    </style>

    <style name="main_bottom_right_bottom_btn_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="main_bottom_right_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
        <!--        <item name="android:foreground">@drawable/home_selector_kg_item_bg</item>-->
    </style>

    <style name="main_bottom_right_image">
        <item name="android:layout_width">@dimen/bottom_btn_list_btn_size</item>
        <item name="android:layout_height">@dimen/bottom_btn_list_btn_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="main_bottom_right_text">
        <item name="android:layout_width">@dimen/bottom_btn_list_btn_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <!--        <item name="android:layout_gravity">bottom</item>-->
        <item name="android:textSize">@dimen/bottom_btn_list_btn_text_size</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!--交互板块-->
    <style name="in_btn_ly">
        <item name="android:layout_width">@dimen/in_btn_ly_width</item>
        <item name="android:layout_height">@dimen/in_btn_ly_height</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="in_btn_iv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/in_btn_ly_width</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="in_btn_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/in_btn_tv_height</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/in_btn_tv_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="travel_btn_ly">
        <item name="android:layout_width">@dimen/travel_btn_ly_width</item>
        <item name="android:layout_height">@dimen/travel_btn_ly_height</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="travel_btn_iv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/travel_btn_iv_height</item>
    </style>

    <style name="travel_btn_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/travel_btn_tv_height</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/travel_btn_tv_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="si_item_point_style">
        <item name="android:layout_width">@dimen/si_item_width</item>
        <item name="android:layout_height">@dimen/si_item_height</item>
        <item name="android:background">#9900FF00</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="si_station_ly">
        <item name="android:layout_width">@dimen/si_item_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="si_station_iv">
        <item name="android:layout_width">@dimen/si_item_width</item>
        <item name="android:layout_height">@dimen/si_item_width</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/ic_line_point</item>
    </style>

    <style name="si_station_tv">
<!--        @dimen/si_item_height_half-->
        <item name="android:layout_width">@dimen/si_item_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/si_item_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/si_item_text_margin</item>
        <item name="android:layout_marginTop">@dimen/si_item_text_margin</item>
    </style>

    <!--设置-->
    <style name="setting_ly">
        <item name="android:layout_width">@dimen/setting_ly_width</item>
        <item name="android:layout_height">@dimen/setting_ly_height</item>
        <item name="android:layout_marginStart">@dimen/setting_ly_margin_start</item>
        <item name="android:paddingStart">@dimen/setting_text_margin_start</item>
        <item name="android:textSize">@dimen/setting_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_marginTop">@dimen/setting_ly_margin_top</item>
        <item name="android:gravity">start |center_vertical</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ly_no_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/title_ly_height</item>
    </style>

    <style name="setting_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_item_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/setting_item_margin</item>
        <item name="android:paddingEnd">@dimen/setting_item_margin</item>
    </style>

    <style name="setting_item_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">start |center_vertical</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/setting_text_size</item>
    </style>

    <style name="setting_item_slider_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/setting_item_slider_width</item>
        <item name="android:progressDrawable">@drawable/setting_seekbar_progress</item>
        <item name="android:thumb">@drawable/setting_seekbar_thumb</item>
        <item name="android:splitTrack">false</item>
        <item name="android:maxHeight">12dp</item>
    </style>

    <style name="playlist_ly">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_item_height</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="playlist_iv">
        <item name="android:layout_width">@dimen/setting_item_height</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="playlist_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/travel_btn_tv_size</item>
        <item name="android:gravity">start |center_vertical</item>
        <item name="android:layout_marginStart">@dimen/setting_item_margin</item>
    </style>

</resources>
