<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
<!--            <size android:height="@dimen/main_switch_height" />-->
            <stroke
                android:width="3dp"
                android:color="@color/switch_open_color" />
            <corners android:radius="@dimen/main_switch_radius" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <size android:height="20dp" />
            <solid android:color="@color/switch_open_color" />
            <gradient
                android:angle="0"
                android:endColor="@color/switch_open_color"
                android:startColor="@color/switch_open_color"
                android:type="linear" />
            <corners android:radius="@dimen/main_switch_radius" />
        </shape>
    </item>
</layer-list>
